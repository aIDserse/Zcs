@{
    ViewData["Title"] = "Event List";
}

<h1>
    @ViewData["Title"]
</h1>

@using (Html.BeginForm("FilterEvents", "Reservation", FormMethod.Get, new { @class = "filter-form" }))
{
    <div class="form-group">
        <label>Organizer:</label>
        <input type="number" min="1" name="organizer" class="form-control" />
    </div>
    <div class="form-group">
        <label>Date:</label>
        <input type="date" name="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Title:</label>
        <input type="text" name="title" class="form-control" />
    </div>
    <div class="button-group">
        <input type="submit" value="Filter" class="btn btn-primary" />
        <input type="button" value="Reset" onclick="location.href='@Url.Action("EventList", "Reservation")'" class="btn btn-secondary" />
    </div>
}

<!-- Display filtered events -->
<div class="flashcard-container">
    @foreach (var e in Model)
    {
        <div class="flashcard">
            <div>
                <h3>@e.Title</h3>
                <p>@e.Description</p>
                <p>@e.Places Places</p>
                <p>Date: @e.Date</p>
                <p>Organizer: @e.Organizer</p>
                @if (e.Places > 0)
                {
                    <a href="/Reservation/AddReservation/@e.ID" class="reservation-button">Add reservation</a>
                }
                else
                {
                    <p class="no-places">No available places anymore</p>
                }
            </div>
        </div>
    }
</div>

<style>
    .flashcard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .flashcard {
        width: 300px;
        height: 250px;
        background-color: #f2f2f2;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        box-sizing: border-box;
    }

        .flashcard:hover {
            transform: scale(1.05);
        }

        .flashcard h3 {
            margin-top: 0;
            font-size: 18px;
            font-weight: bold;
        }

        .flashcard p {
            margin: 0;
            margin-bottom: 10px;
        }

    .reservation-button {
        display: inline-block;
        padding: 8px 12px;
        background-color: #4CAF50;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
    }

    .no-places {
        color: red;
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 200px;
        padding: 6px 10px;
        font-size: 14px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .button-group {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }
</style>
